			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//send a request to get all bookks\r",
							"//extract the book Id with the name \"The Russians\" and parse it into an environment variable\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"console.log (jsonData)\r",
							"console.log (jsonData[0])\r",
							"console.log (jsonData[0].id)\r",
							"\r",
							"let bookId = jsonData[0].id\r",
							"//confirm the bookId with the name The Russian is 1\r",
							"pm.test(\"confirm bookId of a book with the name The Russian is jsonData[0].id \", function () {\r",
							"    pm.expect(1).to.eql(bookId);\r",
							"});\r",
							"//parse it into an environment variable\r",
							"pm.environment.set(\"bookId\", jsonData[0].id)\r",
							"\r",
							""
